<h1 class="text-2xl font-semibold mb-4">Advertisements</h1>
<%== pagy_nav(@pagy) %>
<%= turbo_frame_tag :advertisements do %>
  <div class="grid grid-cols-1 gap-4">
    <%= render @advertisements %>
